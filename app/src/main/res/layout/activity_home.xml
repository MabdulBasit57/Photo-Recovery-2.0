<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@+id/customToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/custom_toolbar"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/toplayout"
        app:layout_constraintEnd_toEndOf="@+id/toplayout"
        app:layout_constraintTop_toBottomOf="@+id/customToolbar"
        android:layout_marginTop="@dimen/_50sdp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/toplayout"
        android:background="@drawable/shadow_home"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@+id/toplayout"
        app:layout_constraintBottom_toBottomOf="@+id/toplayout"
        app:layout_constraintStart_toStartOf="@+id/toplayout"
        app:layout_constraintEnd_toEndOf="@+id/toplayout"
        android:background="@drawable/mask_main"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toplayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/customToolbar"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:background="@drawable/main_tab_bg"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/_10sdp"
        android:visibility="visible"
        android:backgroundTint="#00D1B4"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/storage_details"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/percentageBG"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/totalTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintWidth_percent="0.4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Total Memory"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/percentageBG"
            android:textColor="@color/grey_5"
            android:textSize="@dimen/_11ssp"/>
        <RelativeLayout
            android:id="@+id/percentageBG"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/storage_red"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:id="@+id/percentagefree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80%\nUsed"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:visibility="visible"
                android:textSize="16sp"
                android:textColor="@color/white" />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/topimg"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.7"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_15sdp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/customToolbar"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/home_bg"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recoverDeletedData"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.82"
        app:layout_constraintStart_toStartOf="@+id/recoveredData"
        app:layout_constraintTop_toBottomOf="@+id/topimg"
        android:background="@drawable/round_corner"
        android:backgroundTint="#00D1B4"
        android:paddingVertical="@dimen/_8sdp">
        <TextView
            android:id="@+id/t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:text="Recover Deleted Data"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/detail"/>
        <TextView
            android:id="@+id/detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10ssp"
            android:textColor="#ECECEC"
            android:gravity="center"
            android:fontFamily="sans-serif"            android:text="Recover all of your deleted Data in one click"
            app:layout_constraintStart_toStartOf="@+id/t"
            app:layout_constraintEnd_toEndOf="@+id/t"
            app:layout_constraintTop_toBottomOf="@+id/t"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="296:344"
        app:layout_constraintStart_toEndOf="@+id/recoverDeletedData"
        app:layout_constraintEnd_toEndOf="@+id/recoverDeletedData"
        app:layout_constraintTop_toTopOf="@+id/recoverDeletedData"
        app:layout_constraintBottom_toBottomOf="@+id/recoverDeletedData"
        android:background="@drawable/recyclebin"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recoveredData"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.88"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#E8E8E8"
        android:background="@drawable/round_corner"
        app:layout_constraintTop_toBottomOf="@+id/recoverDeletedData"
        android:layout_marginTop="@dimen/_15sdp">
        <TextView
            android:id="@+id/v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15ssp"
            android:fontFamily="sans-serif"
            android:layout_marginStart="@dimen/_20sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Recovered Data"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/rec"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingVertical="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/v"
            app:layout_constraintEnd_toEndOf="@+id/v"
            app:layout_constraintTop_toBottomOf="@+id/v"/>
        <ImageView
            android:id="@+id/rec"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toEndOf="@+id/v"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/recovered_home_svg"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>