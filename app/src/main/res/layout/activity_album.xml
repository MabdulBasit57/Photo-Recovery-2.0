<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/customToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:layout_constraintTop_toTopOf="parent"
        android:paddingVertical="@dimen/_7sdp">
        <ImageView
            android:id="@+id/backToolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@drawable/arrow_right_svg"
            android:layout_marginTop="@dimen/_5sdp"/>

        <TextView
            android:id="@+id/titleToolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/backToolbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginStart="@dimen/_15sdp"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            android:text="--- Screen"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dataFoundLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corner30"
        android:backgroundTint="#F5F5F5"
        android:layout_margin="@dimen/_15sdp"
        android:padding="@dimen/_20sdp"
        ads:layout_constraintTop_toBottomOf="@+id/customToolbar">
        <ImageView
            android:id="@+id/storageIcon"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="0dp"
            ads:layout_constraintDimensionRatio="70:70"
            ads:layout_constraintTop_toTopOf="parent"
            ads:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/datafound_svg"
            ads:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/titleData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_15sdp"
            ads:layout_constraintTop_toTopOf="parent"
            android:text="Data Found"
            ads:layout_constraintBottom_toTopOf="@+id/center"
            ads:layout_constraintStart_toEndOf="@+id/storageIcon"
            ads:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/totalItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10ssp"
            ads:layout_constraintTop_toBottomOf="@+id/titleData"
            ads:layout_constraintBottom_toBottomOf="parent"
            android:text="000\nItems"
            android:lineSpacingExtra="@dimen/_5sdp"
            android:gravity="center"
            ads:layout_constraintStart_toEndOf="@+id/storageIcon"
            ads:layout_constraintEnd_toStartOf="@+id/center"/>
        <View
            android:id="@+id/center"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="0dp"
            ads:layout_constraintHeight_percent="0.25"
            android:background="#D5D5D5"
            ads:layout_constraintTop_toTopOf="@+id/totalItems"
            ads:layout_constraintBottom_toBottomOf="@+id/totalItems"
            ads:layout_constraintStart_toEndOf="@+id/totalItems"
            ads:layout_constraintEnd_toStartOf="@+id/totalFolders"/>
        <TextView
            android:id="@+id/totalFolders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10ssp"
            ads:layout_constraintTop_toTopOf="@+id/totalItems"
            ads:layout_constraintBottom_toBottomOf="@+id/totalItems"
            android:text="000\nFolders"
            android:lineSpacingExtra="@dimen/_5sdp"
            android:gravity="center"
            ads:layout_constraintStart_toEndOf="@+id/center"
            ads:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gv_folder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        ads:layout_constraintTop_toBottomOf="@+id/dataFoundLayout"
        android:layout_weight="1"
        ads:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/card_album_new"
        android:clipToPadding="false"
        android:layout_marginTop="@dimen/_10sdp"
        android:scrollbarThumbVertical="@color/grey_5"
        android:scrollbars="vertical" />
</androidx.constraintlayout.widget.ConstraintLayout>
